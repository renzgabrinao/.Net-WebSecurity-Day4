@model WebApplication1.Data.IPN;
@{
    ViewData["Title"] = "Confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-success">
    <div class="text-center">
        <span class="text-center">
            <span style="font-size: 2em;">Congratulations @Model.payerFirstName!</span>
            <br /><br /><br /><br />
            <span>Your $@Model.amount</span>
            <span>@Model.currency</span>
            <span>PayPal transaction was successful</span>
        </span>
        <br /><br />
        <span class="text-center" style="font-size: 1.2em;">Keep this transaction ID for future reference</span>
        <span style="font-size: 1.2em; color: black;">@Model.paymentID</span>

    </div>
</div>
